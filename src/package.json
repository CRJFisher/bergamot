    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^22.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "verbose": true,
    "transform": {},
    "globals": {
