  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --testMatch='**/*.test.js'",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testMatch='**/*.integration.test.js'",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "build": "esbuild content.js --bundle --outfile=dist/content.bundle.js --format=iife --allow-overwrite"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.21.4",
