{
  "name": "bergamot",
  "displayName": "Bergamot",
  "description": "Steep knowledge from your browsing patterns in VS Code",
  "version": "0.1.0",
  "publisher": "bergamot",
  "engines": {
    "vscode": "^1.99.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Productivity"
  ],
  "keywords": [
    "bergamot",
    "knowledge-management",
    "pkm",
    "web-memory",
    "browser-history",
    "note-taking",
    "webpage-capture"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bergamot.addHighlight",
        "title": "Add Highlight to Bullet Point"
      },
      {
        "command": "bergamot.showFilterMetrics",
        "title": "Bergamot: Show Filter Metrics"
      },
      {
        "command": "bergamot.generateFilteringReview",
        "title": "Bergamot: Generate Filtering Review"
      },
      {
        "command": "bergamot.showMemoryStats",
        "title": "Bergamot: Show Memory Statistics"
      },
      {
        "command": "bergamot.correctDecision",
        "title": "Bergamot: Correct Filtering Decision"
      },
      {
        "command": "bergamot.correctType",
        "title": "Bergamot: Correct Page Type"
      },
      {
        "command": "bergamot.addExplanation",
        "title": "Bergamot: Add Feedback Explanation"
      },
      {
        "command": "bergamot.searchWebpages",
        "title": "Bergamot: Search Webpages"
      },
      {
        "command": "bergamot.createFilterRule",
        "title": "Bergamot: Create Filter Rule"
      },
      {
        "command": "bergamot.manageFilterRules",
        "title": "Bergamot: Manage Filter Rules"
      },
      {
        "command": "bergamot.createDomainRule",
        "title": "Bergamot: Create Domain Rule"
      },
      {
        "command": "bergamot.createContentPatternRule",
        "title": "Bergamot: Create Content Pattern Rule"
      },
      {
        "command": "bergamot.showRuleStatistics",
        "title": "Bergamot: Show Rule Statistics"
      },
      {
        "command": "bergamot.exportFilterRules",
        "title": "Bergamot: Export Filter Rules"
      },
      {
        "command": "bergamot.importFilterRules",
        "title": "Bergamot: Import Filter Rules"
      }
    ],
    "configuration": {
      "title": "Bergamot",
      "properties": {
        "bergamot.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for Bergamot",
          "scope": "application"
        },
        "bergamot.webpageFilter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable webpage filtering based on content type"
        },
        "bergamot.webpageFilter.allowedTypes": {
          "type": "array",
          "default": [
            "knowledge"
          ],
          "description": "Types of pages to process",
          "items": {
            "type": "string",
            "enum": [
              "knowledge",
              "interactive_app",
              "aggregator",
              "leisure",
              "navigation",
              "other"
            ]
          }
        },
        "bergamot.webpageFilter.minConfidence": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence threshold for page classification"
        },
        "bergamot.webpageFilter.logDecisions": {
          "type": "boolean",
          "default": true,
          "description": "Log filtering decisions to console"
        },
        "bergamot.agentMemory.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable agent memory for learning from feedback"
        },
        "bergamot.agentMemory.recentPagesDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Days to show accepted pages in feedback document"
        },
        "bergamot.agentMemory.filteredPagesHours": {
          "type": "number",
          "default": 48,
          "minimum": 1,
          "maximum": 168,
          "description": "Hours to show filtered pages in feedback document"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "clean": "rm -rf out",
    "package": "vsce package",
    "build:production": "node scripts/build-production.js",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "version:prerelease": "node scripts/version-bump.js prerelease",
    "publish:vscode": "node scripts/publish-vscode.js",
    "publish:openvsx": "node scripts/publish-openvsx.js",
    "publish:all": "npm run publish:vscode && npm run publish:openvsx"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.2.2-alpha.18",
    "@lancedb/lancedb": "^0.19.0",
    "@langchain/core": "^0.3.48",
    "@langchain/langgraph": "^0.2.67",
    "@langchain/openai": "^0.5.7",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@mongodb-js/zstd": "^2.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "xstate": "^5.20.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "20.x",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ovsx": "^0.10.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bergamot/bergamot.git"
  },
  "bugs": {
    "url": "https://github.com/bergamot/bergamot/issues"
  },
  "homepage": "https://github.com/bergamot/bergamot#readme",
  "license": "MIT"
}
