{
  "name": "pkm-assistant",
  "displayName": "PKM Assistant",
  "description": "Adds interactive highlights to bullet points in markdown documents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pkm-assistant.addHighlight",
        "title": "Add Highlight to Bullet Point"
      },
      {
        "command": "pkm-assistant.showFilterMetrics",
        "title": "PKM Assistant: Show Filter Metrics"
      },
      {
        "command": "pkm-assistant.generateFilteringReview",
        "title": "PKM Assistant: Generate Filtering Review"
      },
      {
        "command": "pkm-assistant.showMemoryStats",
        "title": "PKM Assistant: Show Memory Statistics"
      },
      {
        "command": "pkm-assistant.correctDecision",
        "title": "PKM Assistant: Correct Filtering Decision"
      },
      {
        "command": "pkm-assistant.correctType",
        "title": "PKM Assistant: Correct Page Type"
      },
      {
        "command": "pkm-assistant.addExplanation",
        "title": "PKM Assistant: Add Feedback Explanation"
      }
    ],
    "configuration": {
      "title": "PKM Assistant",
      "properties": {
        "pkm-assistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for the PKM Assistant",
          "scope": "application"
        },
        "pkm-assistant.webpageFilter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable webpage filtering based on content type"
        },
        "pkm-assistant.webpageFilter.allowedTypes": {
          "type": "array",
          "default": [
            "knowledge"
          ],
          "description": "Types of pages to process",
          "items": {
            "type": "string",
            "enum": [
              "knowledge",
              "interactive_app",
              "aggregator",
              "leisure",
              "navigation",
              "other"
            ]
          }
        },
        "pkm-assistant.webpageFilter.minConfidence": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 1,
          "description": "Minimum confidence threshold for page classification"
        },
        "pkm-assistant.webpageFilter.logDecisions": {
          "type": "boolean",
          "default": true,
          "description": "Log filtering decisions to console"
        },
        "pkm-assistant.agentMemory.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable agent memory for learning from feedback"
        },
        "pkm-assistant.agentMemory.recentPagesDays": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 30,
          "description": "Days to show accepted pages in feedback document"
        },
        "pkm-assistant.agentMemory.filteredPagesHours": {
          "type": "number",
          "default": 48,
          "minimum": 1,
          "maximum": 168,
          "description": "Hours to show filtered pages in feedback document"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "cd referrer_tracker_extension && npm run test:e2e",
    "test:all": "npm run test:unit && npm run test:e2e",
    "build:vscode": "tsc -p tsconfig.vscode.json",
    "build:browser": "tsc -p browser_pkm/referrer_tracker_extension/tsconfig.browser.json"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/chrome": "^0.0.326",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/mdast": "^4.0.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "mocha": "^11.7.1",
    "ts-jest": "^29.3.2",
    "typescript": "^5.9.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.2.2-alpha.18",
    "@lancedb/lancedb": "^0.19.0",
    "@langchain/core": "^0.3.48",
    "@langchain/langgraph": "^0.2.67",
    "@langchain/openai": "^0.5.7",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@mongodb-js/zstd": "^2.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "uuid": "^11.1.0",
    "xstate": "^5.20.1",
    "zod": "^3.23.8"
  }
}
