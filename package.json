{
  "name": "pkm-assistant",
  "displayName": "PKM Assistant",
  "description": "Adds interactive highlights to bullet points in markdown documents",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pkm-assistant.addHighlight",
        "title": "Add Highlight to Bullet Point"
      }
    ],
    "configuration": {
      "title": "PKM Assistant",
      "properties": {
        "pkm-assistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for the PKM Assistant",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "cd referrer_tracker_extension && npm run test:e2e",
    "test:all": "npm run test:unit && npm run test:e2e",
    "build:vscode": "tsc -p tsconfig.vscode.json",
    "build:browser": "tsc -p browser_pkm/referrer_tracker_extension/tsconfig.browser.json"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/chrome": "^0.0.326",
    "@types/glob": "^7.1.3",
    "@types/jest": "^29.5.14",
    "@types/markdown-it": "^14.1.2",
    "@types/mdast": "^4.0.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "mocha": "^11.7.1",
    "ts-jest": "^29.3.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@duckdb/node-api": "^1.2.2-alpha.18",
    "@lancedb/lancedb": "^0.19.0",
    "@langchain/core": "^0.3.48",
    "@langchain/langgraph": "^0.2.67",
    "@langchain/openai": "^0.5.7",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@mongodb-js/zstd": "^2.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.23.8"
  }
}
