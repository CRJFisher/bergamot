{
  "manifest_version": 3,
  "name": "Bergamot",
  "version": "1.0",
  "description": "Steep knowledge from your web browsing patterns.",
  "permissions": ["scripting", "webRequest", "tabs", "activeTab", "nativeMessaging"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/background.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Bergamot"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bergamot@example.com"
    }
  }
} 