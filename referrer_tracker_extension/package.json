{
  "name": "firefox_local_post_extension",
  "version": "1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/content.ts --bundle --outfile=dist/content.bundle.js --format=iife --allow-overwrite && esbuild src/background.ts --bundle --outfile=dist/background.bundle.js --format=esm --allow-overwrite",
    "postbuild": "node copy-dist-to-browser-folders.js",
    "build:test": "node build-for-test.js",
    "postbuild:test": "node copy-dist-to-browser-folders.js",
    "test:unit": "jest",
    "test:cdp": "npm run build && npx ts-node e2e/cdp_extension_test.ts",
    "test:cdp:multi": "npm run build && npx ts-node e2e/cdp_multi_page_tests.ts",
    "test:cdp:background": "npm run build && npx ts-node e2e/cdp_background_state_tests.ts",
    "test": "npm run test:unit",
    "chrome": "node scripts/load-extension.js",
    "chrome:debug": "node scripts/load-extension.js --auto-open-devtools-for-tabs",
    "debug": "npm run build && npm run chrome:debug"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hpcc-js/wasm-zstd": "^1.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/chrome": "^0.0.260",
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.1",
    "chrome-remote-interface": "^0.33.3",
    "esbuild": "^0.21.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  }
}
