{
  "name": "firefox_local_post_extension",
  "version": "1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/content.ts --bundle --outfile=dist/content.bundle.js --format=iife --allow-overwrite && esbuild src/background.ts --bundle --outfile=dist/background.bundle.js --format=esm --allow-overwrite",
    "postbuild": "node copy-dist-to-browser-folders.js",
    "build:test": "node build-for-test.js",
    "postbuild:test": "node copy-dist-to-browser-folders.js",
    "test:unit": "jest",
    "test:e2e": "npm run build:test && npx playwright test --reporter=line",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hpcc-js/wasm-zstd": "^1.2.1",
    "cheerio": "^1.1.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.53.0",
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.1",
    "@types/webextension-polyfill": "^0.12.3",
    "esbuild": "^0.21.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "setupFiles": [
      "./tests/setup.ts"
    ]
  }
}
